<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="500.0" style="-fx-background-color: #EEEEEE;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.glencoesoftware.convert.PrimaryController">
   <bottom>
      <ToolBar prefHeight="24.0" prefWidth="800.0" style="-fx-background-color: #EEEEEE; -fx-border-color: #CCCCCC;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <Label fx:id="statusBox" text="Add files to begin" />
      </ToolBar>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
         <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#runConvert" text="Run Conversions" />
            <CheckMenuItem fx:id="overwriteMenuItem" mnemonicParsing="false" onAction="#overwriteMenu" text="Overwrite Files" />
            <MenuItem mnemonicParsing="false" onAction="#chooseOutputDirectory" text="Choose Output Directory" />
            <MenuItem mnemonicParsing="false" onAction="#resetOutputDirectory" text="Reset Output Directory" />
            <MenuItem mnemonicParsing="false" text="Exit" />
         </Menu>
         <Menu mnemonicParsing="false" text="Edit">
            <MenuItem mnemonicParsing="false" onAction="#addFiles" text="Add Files" />
            <MenuItem mnemonicParsing="false" onAction="#removeFile" text="Remove Selected" />
            <MenuItem mnemonicParsing="false" onAction="#clearFinished" text="Clear Finished" />
            <MenuItem mnemonicParsing="false" onAction="#clearFiles" text="Clear All" />
         </Menu>
         <Menu mnemonicParsing="false" text="View">
            <Menu fx:id="logLevelMenu" mnemonicParsing="false" text="Log Level" />
            <MenuItem mnemonicParsing="false" onAction="#displayLog" text="Show Logs" />
         </Menu>
         <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" onAction="#displayAbout" text="About" />
         </Menu>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="5.0">
         <padding>
            <Insets left="5.0" right="10.0" />
         </padding>
         <HBox alignment="CENTER" prefHeight="31.0" prefWidth="600.0" VBox.vgrow="NEVER">
            <Label text="Output Folder" textOverrun="LEADING_ELLIPSIS" HBox.hgrow="NEVER">
               <padding>
                  <Insets right="10.0" />
               </padding>
            </Label>
            <TextField fx:id="outputDirectory" promptText="Choose an output directory" text="&lt;Same as input&gt;" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="chooseDirButton" mnemonicParsing="false" onAction="#chooseOutputDirectory" text="Choose" HBox.hgrow="NEVER" />
            <Button fx:id="clearDirButton" graphicTextGap="2.0" mnemonicParsing="false" onAction="#resetOutputDirectory" text="Clear" textAlignment="CENTER" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets left="3.0" right="3.0" />
               </HBox.margin>
            </Button>
         </HBox>
         <VBox VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
               <VBox prefHeight="303.0" prefWidth="572.0" HBox.hgrow="ALWAYS">
                  <HBox alignment="TOP_RIGHT" prefHeight="17.0" prefWidth="578.0" VBox.vgrow="NEVER">
                     <Region layoutX="424.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" />
                     <Label alignment="CENTER" minWidth="68.0" prefHeight="17.0" prefWidth="68.0" text="Input" textAlignment="CENTER" HBox.hgrow="NEVER">
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </Label>
                     <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                     <Region layoutX="228.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" />
                     <Label alignment="CENTER" minWidth="68.0" prefHeight="17.0" prefWidth="68.0" text="Output" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                     <Region layoutX="56.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" />
                  </HBox>
                  <ListView fx:id="inputFileList" minWidth="550.0" onDragDropped="#handleFileDrop" onDragOver="#handleFileDragOver" onMouseClicked="#listClickHandler" style="-fx-selection-bar: #DDDDDD;" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
                     </padding>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </ListView>
               </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <Button fx:id="addFileButton" mnemonicParsing="false" onAction="#addFiles" text="Add files" />
               <Button fx:id="removeFileButton" mnemonicParsing="false" onAction="#removeFile" text="Remove Selected" />
               <Button fx:id="clearFileButton" mnemonicParsing="false" onAction="#clearFiles" text="Remove All" />
               <Button fx:id="clearFinishedButton" mnemonicParsing="false" onAction="#clearFinished" text="Clear Completed" />
            </HBox>
         </VBox>
      </VBox>
   </center>
   <left>
      <VBox minWidth="160.0" prefHeight="598.0" prefWidth="160.0" BorderPane.alignment="CENTER">
         <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="36.0" prefWidth="160.0" text="NGFF Converter GUI" textAlignment="CENTER" VBox.vgrow="NEVER">
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </Label>
         <Label fx:id="versionDisplay" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="0.0" prefWidth="160.0" text="Version " textAlignment="CENTER" VBox.vgrow="NEVER">
            <font>
               <Font size="10.0" />
            </font>
         </Label>
         <Button fx:id="runButton" mnemonicParsing="false" onAction="#runConvert" prefHeight="35.0" prefWidth="145.0" text="Run conversions" VBox.vgrow="NEVER">
            <VBox.margin>
               <Insets left="8.0" right="8.0" top="15.0" />
            </VBox.margin>
            <font>
               <Font size="16.0" />
            </font>
         </Button>
         <GridPane minHeight="61.0" prefHeight="72.0" prefWidth="160.0" VBox.vgrow="NEVER">
            <columnConstraints>
               <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="129.0" minWidth="10.0" prefWidth="72.0" />
               <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="132.0" minWidth="10.0" prefWidth="78.0" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding>
               <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="79.0" text="Log level" textAlignment="RIGHT" />
            <CheckBox fx:id="wantOverwrite" layoutX="15.0" layoutY="149.0" mnemonicParsing="false" onAction="#toggleOverwrite" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label alignment="CENTER_RIGHT" layoutX="25.0" layoutY="119.0" prefHeight="17.0" prefWidth="81.0" text="Overwrite" GridPane.rowIndex="1" />
            <ChoiceBox fx:id="logLevel" onAction="#updateLogLevel" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </GridPane.margin>
            </ChoiceBox>
         </GridPane>
   
                  <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <Label text="Extra Arguments" VBox.vgrow="NEVER" />
            <TextArea fx:id="extraParams" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin>
            </TextArea>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </VBox>
         <BorderPane.margin>
            <Insets left="5.0" />
         </BorderPane.margin>
      </VBox>
   </left>
</BorderPane>
